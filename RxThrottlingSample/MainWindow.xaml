<Window x:Class="RxThrottlingSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <TextBox x:Name="input"
                 Margin="5"
                 DockPanel.Dock="Top"></TextBox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ScrollViewer x:Name="scrollViewer1"
                          Margin="5">
                <TextBox x:Name="output1"></TextBox>
            </ScrollViewer>
            <ScrollViewer x:Name="scrollViewer2"
                          Margin="5"
                          Grid.Column="1">
                <TextBox x:Name="output2"></TextBox>
            </ScrollViewer>
            <ScrollViewer x:Name="scrollViewer3"
                          Margin="5"
                          Grid.Column="2">
                <TextBox x:Name="output3"></TextBox>
            </ScrollViewer>
        </Grid>
    </DockPanel>
</Window>
